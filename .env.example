# Server
PORT=3001
PERSIST_JOBS=false

# Scrape concurrency and runtime safety
MAX_ACTIVE_SCRAPES=3
JOB_MAX_RUNTIME_MS=2700000

# Browser behavior
CHROME_HEADLESS=true
PRODUCTS_PER_BROWSER=8
NAVIGATION_TIMEOUT_MS=40000
SELECTOR_TIMEOUT_MS=15000
CHALLENGE_WAIT_MS=25000

# Image pipeline
IMAGE_DOWNLOAD_CONCURRENCY=3
IMAGE_HTTP_TIMEOUT_MS=20000
IMAGE_CONVERT_TIMEOUT_MS=25000
IMAGE_SELECTOR_TIMEOUT_MS=8000
IMAGE_EXTRACT_RETRIES=0
IMAGE_EMPTY_RETRIES=0

# Memory warning thresholds
MEMORY_WARN_HEAP_PERCENT=90
MEMORY_WARN_MIN_HEAP_TOTAL_MB=256
MEMORY_WARN_MIN_HEAP_USED_MB=192
MEMORY_WARN_COOLDOWN_MS=1800000
